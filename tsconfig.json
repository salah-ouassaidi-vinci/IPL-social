{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["jest", "node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
